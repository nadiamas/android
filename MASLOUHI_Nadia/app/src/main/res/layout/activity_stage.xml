<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #ebf5fb"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/myRelative"
        android:layout_width="match_parent"
        android:layout_height="512dp">

        <Button
            android:id="@+id/p0"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="51dp"
            android:tag="1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/p1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/p0"
            android:layout_centerHorizontal="true"
            android:tag="2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/p2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/p1"
            android:layout_alignLeft="@+id/p5"
            android:layout_alignStart="@+id/p5"
            android:layout_alignTop="@+id/p1"
            android:tag="3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/p3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/p0"
            android:layout_alignStart="@+id/p0"
            android:layout_below="@+id/p0"
            android:layout_marginTop="66dp"
            android:tag="4"
            android:textStyle="bold" />

        <Button
            android:id="@+id/p4"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/p3"
            android:layout_alignBottom="@+id/p3"
            android:layout_alignLeft="@+id/p1"
            android:layout_alignStart="@+id/p1"
            android:tag="5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/p5"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/p4"
            android:layout_alignBottom="@+id/p4"
            android:layout_alignLeft="@+id/p8"
            android:layout_alignStart="@+id/p8"
            android:tag="6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/p6"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/p3"
            android:layout_alignStart="@+id/p3"
            android:layout_below="@+id/p5"
            android:layout_marginTop="74dp"
            android:tag="7"
            android:textStyle="bold" />

        <Button
            android:id="@+id/p7"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/p6"
            android:layout_alignBottom="@+id/p6"
            android:layout_alignLeft="@+id/p4"
            android:layout_alignStart="@+id/p4"
            android:tag="8"
            android:textStyle="bold" />

        <Button
            android:id="@+id/p8"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/p7"
            android:layout_alignBottom="@+id/p7"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:tag="9"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/myLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>