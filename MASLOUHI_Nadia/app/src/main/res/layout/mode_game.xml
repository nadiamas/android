<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #ebf5fb"
    tools:context="com.example.nadia.game.activities.MainActivity">

    <TextView
        android:id="@+id/txtJeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:fontFamily="sans-serif"
        android:text="Puzzle Nanterre"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnClassic"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txtJeu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:background="#a2d9ce"
        android:drawableBottom="#a2d9ce"
        android:text="Classic"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPremium"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/btnClassic"
        android:layout_alignStart="@+id/btnClassic"
        android:layout_below="@+id/btnClassic"
        android:layout_marginTop="52dp"
        android:background=" #f1948a"
        android:text="Premium"
        android:textSize="18sp"
        android:textStyle="bold" />



</RelativeLayout>
